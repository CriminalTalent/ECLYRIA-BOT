# 호그와트 마법용품점 봇 - Gemfile
source 'https://rubygems.org'

# 마스토돈 API 클라이언트
gem 'mastodon'

# 환경변수 관리
gem 'dotenv'

# 구글 시트/드라이브 연동
gem 'google_drive'

# 구글 API 인증 (google_drive 의존성)
gem 'googleauth'

# JSON 처리 (Ruby 3.0+ 호환성)
gem 'json'

# HTTP 요청 (mastodon 의존성)
gem 'http'

# 개발/디버깅용 (선택사항)
group :development do
  gem 'pry'      # 디버깅용
  gem 'irb'      # 대화형 Ruby
end
